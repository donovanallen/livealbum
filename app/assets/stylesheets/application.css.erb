body{
  text-align: center;
  /*background-color: RGBA(33, 33, 33, 1.00);*/
  background-color: black;
  color: white;
  display: flex;
  flex-direction: column;
  font-family: 'Quicksand', sans-serif;
  height: 100%;
  padding: 10px;
}

.link {
  text-decoration: none;
  color: currentColor;
  transition: width 2s;
}

.link :visited{
  color: currentColor;
}

.link:hover{
  color: RGBA(255, 0, 141, 1.00);
  text-shadow: 1px 1px 3px gray;
}

/*#artistlisting:hover > .artistpage{
  background-image: url(<%#= photo %>);
}*/

a{
  color: currentColor;
  text-decoration: none;
}

a:visited{
  color: currentColor;
  text-decoration: none;
}

img{
  width: 250px;
  align-self: center;
  margin-top: 10px;
  margin-bottom: 10px;
}

#logo{
  height: 100px;
  width: 100px;
  margin: 5px;
}

/*header *{
  border: 2px solid red;
}*/

header{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  margin-left: 10px;
}

.heading *{
  margin-top: 0;
  margin-bottom: 0;
  margin-left: 5px;
  display: flex;
  flex-direction: column;
}

h1{
  font-family: 'Megrim', cursive;
  font-size: 60px;
  margin-bottom: 0px;
  color: RGBA(255, 0, 141, 1.00);
  padding-top: 0px;
  padding-bottom: 0px;
  text-align: left;
}


h2{
  font-family: 'Poiret One', cursive;
  margin-top: 0;
}

h3{
  font-size: 40px;
  margin-bottom: auto;
  margin-top:  10px;
  color: RGBA(57, 229, 255, 1.00);
}

h4{
  color: RGBA(80, 84, 87, 1.00);
  margin-top: auto;
  margin-bottom: auto;
}

.showinfo{
  margin-bottom: 25px;
}

#home{
  padding-top: 0px;
  padding-bottom: 0px;
}

p{
  font-size: 30px;
  margin-top: 3px;
  margin-bottom: 3px;
}

.artistcard{
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: flex-start;
  justify-content: center;
}

.artistpage{
  border: 3px solid white;
  border-radius: 10px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 20px;
  padding-top: 20px;
  text-align: center;
  justify-content: center;
  width: 70%;
  margin-right: auto;
  margin-left: auto;
  max-width: 700px;
  margin-top: 40px;
}

#artistindex{
  background-color: RGBA(33, 33, 33, .6);
}

.albuminfo{
  text-align: center;
  margin-left: 0px;
}

#albumlisthead{
  color: RGBA(80, 84, 87, 1.00);
  font-size: 20px;
  margin-top: 10px;
}

#artistbio{
  font-size: 15px;
}

#albumtitles{
  text-align: left;
  margin-top: 0px;
  padding: 10px;
}

footer{
margin-top: 100px;
}


a.fav {
  text-decoration: none;
  color: red;
}

a.no-fav {
  text-decoration: none;
  color: white;
}

.fav:visited, .no-fav:visited {
  text-decoration: none;
}
