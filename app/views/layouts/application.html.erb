<!DOCTYPE html>
<html>
  <head>
    <title>Setlist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Nixie+One|Knewave|Poiret+One|Quicksand|Comfortaa|Bungee+Hairline" rel="stylesheet">
  </head>

<div id="mainheader">

    <header>
    <img src="/assets/logo-b026502bb6e188b97c6dca0ddc9c192542f01aeef188adc0709344f2059101b0.png" alt="logo" id="logo" />

    <div class="heading">
      <h1><a href="/" id="home">setlist</a></h1>
    </div>
  </header>
  <hr style="color:white;width:97%;margin-top:15px">
<div class="userbar">
  <% if !current_user %>
    <%= link_to "Sign up", new_user_registration_path %> &nbsp;|&nbsp;

    <%= link_to "Sign In", new_user_session_path %>
  <% else %>
    <%#= link_to "New Showlist", new_showlist_path %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> &nbsp;|&nbsp;
    <%= current_user.email %>
  <% end %>
</div>
<br>
<h4 class="notice"><%= notice %></h4>
<h4 class="alert"><%= alert %></h4>
<br>
</div>
<br>
<body>
  <div id="container">

  <div class="browsebar">
    <%= link_to "Browse by Artists", artists_path, class: "link", id: "navbarartists" %>
    <%= link_to "Browse by Albums", albums_path, class: "link", id: "navbaralbums" %>
  </div>

  <%= yield %>

</div>
</body>

</html>
